		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- Assume test is the database name -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost/HibernateKurs5_Sekcja6_Unidirectional_One_to_Many_Association?useSSL=false&amp;serverTimezone=UTC</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Warszawa5584</property>

		<!-- JDBC connection pool settings ... using built-in test pool -->
       <property name="connection.pool_size">10</property> 

		<!-- Echo the SQL to stdout -->
		<property name="show_sql">true</property>

        <property name="hbm2ddl.auto">create</property>

		<!-- Set the current session context -->
      <property name="current_session_context_class">thread</property>
      
